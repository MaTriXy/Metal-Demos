//vert
#version 120
varying vec4 vClr;
uniform mat4 ModelViewProjectionMatrix;
void main() {
	gl_Position = ModelViewProjectionMatrix * vec4(gl_Vertex.xyz, 1.0);
	float d = 1.0 - (2.0* (gl_Position.z+1.0));
	vClr = vec4(d, d, d, 1.0);
}
//frag
#version 120
varying vec4 vClr;
void main() {
 gl_FragColor = vClr;
}